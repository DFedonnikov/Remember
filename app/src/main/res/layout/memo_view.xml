<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/memoRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/memo_view_scene">

    <EditText
        android:id="@+id/memoEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/memo_blue"
        android:elevation="4dp"
        android:gravity="top"
        android:hint="@string/memo_text_hint"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.chip.Chip
        android:id="@+id/alarmChip"
        style="@style/Widget.MaterialComponents.Chip.Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="6dp"
        android:checkable="true"
        android:elevation="4dp"
        android:outlineProvider="bounds"
        android:text="@string/set_alarm"
        app:checkedIcon="@drawable/ic_alarm_blue"
        app:chipIcon="@drawable/ic_alarm_disabled"
        app:layout_constraintBottom_toBottomOf="@id/memoEditText"
        app:layout_constraintEnd_toEndOf="@id/memoEditText"
        app:rippleColor="@color/blue" />

    <View
        android:id="@+id/clickableArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@id/memoEditText"
        app:layout_constraintEnd_toEndOf="@+id/memoEditText"
        app:layout_constraintStart_toStartOf="@id/memoEditText"
        app:layout_constraintTop_toTopOf="@+id/memoEditText" />


</androidx.constraintlayout.motion.widget.MotionLayout>