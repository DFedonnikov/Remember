<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="4dp">

    <ImageView
        android:id="@+id/color_image_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:contentDescription="Spinner list item color image"
        app:srcCompat="@drawable/color_spinner_list_item_image" />

    <TextView
        android:id="@+id/color_text_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:text="@string/color_name"
        android:textSize="24sp" />
</LinearLayout>