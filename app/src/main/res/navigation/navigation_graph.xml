<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/mainList">

    <action
        android:id="@+id/open_edit"
        app:destination="@id/edit" />

    <action
        android:id="@+id/open_main"
        app:destination="@+id/mainList" />

    <fragment
        android:id="@+id/mainList"
        android:name="com.gnest.remember.presentation.ui.ActiveItemsFragment"
        android:label="@string/notes"
        tools:layout="@layout/fragment_active_list">

        <argument
            android:name="orientation"
            android:defaultValue="1"
            app:argType="integer" />

        <argument
            android:name="position"
            android:defaultValue="0"
            app:argType="integer" />

        <argument
            android:name="isExpanded"
            android:defaultValue="false"
            app:argType="boolean" />

        <argument
            android:name="shouldRestore"
            android:defaultValue="false"
            app:argType="boolean" />
        <action
            android:id="@+id/action_mainList_to_edit"
            app:destination="@id/edit" />

    </fragment>

    <fragment
        android:id="@+id/archive"
        android:name="com.gnest.remember.presentation.ui.ArchivedItemsFragment"
        android:label="@string/archive"
        tools:layout="@layout/fragment_archived_list" />

    <fragment
        android:id="@+id/editMemo"
        android:name="com.gnest.remember.ui.fragments.EditMemoFragment"
        tools:layout="@layout/fragment_edit_memo">

        <argument
            android:name="memo_id"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/edit"
        android:name="com.gnest.remember.presentation.ui.EditFragment"
        tools:layout="@layout/fragment_edit">
        <argument
            android:name="memoId"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="position"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="isArchived"
            android:defaultValue="false"
            app:argType="boolean"
            />
    </fragment>

    <fragment
        android:id="@+id/settings"
        android:name="com.gnest.remember.ui.fragments.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />

</navigation>