<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/scale_transition"
        motion:transitionDisable="true"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="100">


    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/memoBackground">
            <Transform
                android:scaleX="@integer/scaleUnselected"
                android:scaleY="@integer/scaleUnselected" />
        </Constraint>
        <Constraint android:id="@+id/memoEditText">
            <Transform
                android:scaleX="@integer/scaleUnselected"
                android:scaleY="@integer/scaleUnselected" />
        </Constraint>
        <Constraint android:id="@+id/alarmChip">
            <Transform
                android:scaleX="@integer/scaleUnselected"
                android:scaleY="@integer/scaleUnselected" />
        </Constraint>
        <Constraint android:id="@+id/clickableArea">
            <Transform
                android:scaleX="@integer/scaleUnselected"
                android:scaleY="@integer/scaleUnselected" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/memoBackground">
            <Transform
                android:scaleX="@fraction/scaleSelected"
                android:scaleY="@fraction/scaleSelected" />
        </Constraint>
        <Constraint android:id="@+id/memoEditText">
            <Transform
                android:scaleX="@fraction/scaleSelected"
                android:scaleY="@fraction/scaleSelected" />
        </Constraint>
        <Constraint android:id="@+id/alarmChip">
            <Transform
                android:scaleX="@fraction/scaleSelected"
                android:scaleY="@fraction/scaleSelected" />
        </Constraint>
        <Constraint android:id="@+id/clickableArea">
            <Transform
                android:scaleX="@fraction/scaleSelected"
                android:scaleY="@fraction/scaleSelected" />
        </Constraint>
    </ConstraintSet>

</MotionScene>